<?xml version="1.0" encoding="UTF-8"?>
<xs:schema elementFormDefault="qualified"
           xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:complexType name="Faculty">
      <xs:sequence>
        <xs:element name="Cathedra" type="Cathedra" minOccurs="0" maxOccurs="unbounded"/>
      </xs:sequence>
      <xs:attribute type="xs:string" name="name" use="required"/>
    </xs:complexType>
    <xs:complexType name="Group">
      <xs:sequence>
        <xs:element name="Student" type="Student" maxOccurs="unbounded" minOccurs="0"/>
      </xs:sequence>
      <xs:attribute type="xs:string" name="name" use="required"/>
    </xs:complexType>
    <xs:complexType name="University">
      <xs:sequence>
        <xs:element name="Faculty" type="Faculty" maxOccurs="unbounded" minOccurs="0"/>
      </xs:sequence>
      <xs:attribute type="xs:string" name="name" use="required"/>
    </xs:complexType>
    <xs:complexType name="Cathedra">
      <xs:sequence>
        <xs:element name="Group" type="Group" maxOccurs="unbounded" minOccurs="0"/>
      </xs:sequence>
      <xs:attribute type="xs:string" name="name" use="required"/>
    </xs:complexType>
    <xs:complexType name="Student">
      <xs:sequence>
        <xs:element name = "Subject" type="Subject" maxOccurs="unbounded" minOccurs="0"/>
      </xs:sequence>
      <xs:attribute type="xs:string" name="name" use="required"/>
      <xs:attribute type="xs:string" name="surname" use="required"/>
      <xs:attribute type="xs:string" name="sex" use="required"/>
    </xs:complexType>
    <xs:simpleType name="name">
        <xs:restriction base = "xs:string">
        </xs:restriction>
    </xs:simpleType>
    <xs:simpleType name="surname">
        <xs:restriction base = "xs:string">
        </xs:restriction>
    </xs:simpleType>
    <xs:simpleType name="sex">
        <xs:restriction base = "xs:string">
            <xs:enumeration value="male"></xs:enumeration>
            <xs:enumeration value="female"></xs:enumeration>
        </xs:restriction>
    </xs:simpleType>
    <xs:complexType name="Subject">
      <xs:sequence>
        <xs:element name = "Mark" type="Mark" maxOccurs="unbounded" minOccurs="0"/>
      </xs:sequence>
      <xs:attribute type="xs:string" name="name" use="required"/>
    </xs:complexType>
    <xs:complexType name="Mark">
      <xs:attribute name="rating" use="required">
        <xs:simpleType>
          <xs:restriction base="xs:int">
            <xs:pattern value = "[1-5]" />
          </xs:restriction>
        </xs:simpleType>
      </xs:attribute>
    </xs:complexType>
</xs:schema>